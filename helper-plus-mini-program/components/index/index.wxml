<view class="header">
  <view class="userinfo" bindtap="test">
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
  </view>
  <view class="address" bindtap="openMap"> 
    <icon class="myicon iconfont icon-dizhi"></icon>
    <scroll-view scroll-x="true" class="scroll_display">
      <text class="text_display">{{address}}</text>
    </scroll-view>
  </view>
  

</view>
<view class="container">
  
  <scroll-view scroll-y style="height:{{height}}rpx">
    
    <view wx:for="{{orderList}}" wx:for-item="order" wx:key="orderId">
