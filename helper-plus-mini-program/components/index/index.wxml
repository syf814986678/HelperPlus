        <view class="left-info">
          <view class="order-class">
            <view><text>订单名称:</text></view>
            <scroll-view scroll-x="true" class="order-info" style="width:{{orderNameWidth}}%">
              <text style="white-space: nowrap">{{order.orderName}}</text>
            </scroll-view>
          </view>
          <view class="order-class">
            <view><text>限制接取时间:</text></view>
            <scroll-view scroll-x="true" class="order-info" style="width:{{orderTimeWidth}}%">
              <text style="white-space: nowrap">{{order.orderUntilPickTime}}</text>
            </scroll-view>
            <!-- <view class="order-info" style="width:60%">
              <text>{{order.orderUntilPickTime}}</text>
            </view> -->
          </view>  
          <view class="order-class">
            <view><text>期望送达时间:</text></view>
            <scroll-view scroll-x="true" class="order-info" style="width:{{orderTimeWidth}}%">
              <text style="white-space: nowrap">{{order.orderUntilFinishTime}}</text>
            </scroll-view>
            <!-- <view class="order-info" style="width:60%">
              <text>{{order.orderUntilFinishTime}}</text>
            </view> -->
          </view> 
          <view class="order-class" style="margin-bottom: 10rpx">
            <view><text>佣金:</text></view>
            <view class="order-info">
              <text>￥{{order.orderPay}}</text>
            </view>
          </view>  
        </view>

        <view class="right-info">
          <view hover-class="hover_button" class="button button_1">
            test1
          </view>
          <view hover-class="hover_button" class="button button_2">
            test2
            <!-- <button>test2</button> -->
          </view>
        </view>
      </view>
      
      <view class="line"></view>

